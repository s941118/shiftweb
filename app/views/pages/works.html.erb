<%= render "common/header" %>
<div class="content barba-container content-loading" data-namespace="works">
  <%= render "common/mobile_nav" %>
  <div class="works-content">
    <section class="works-map-wrapper">
      <div class="works-map">
        <div class="preview-wrapper">
          <% x = Work.x(params[:n]) %>
          <% @works.each_slice(x).with_index do |x_works, x_index| %>
            <% x_works.each_with_index do |work, index| %>
              <a class="work-block work-block-hide" data-work-id="<%= work.id %>">
                <div class="work-image"><img src="<%= asset_path('work'+rand(1..5).to_s+'.png') %>"></div>
                <div class="work-des">
                  <p>#<%= index + 1 + x * x_index %> / SHIFT work</p>
                  <p class="work-title"><%= work.title %></p>
                  <!-- <div class="work-tags"><span class="work-year" data-year="#2018">#2018</span><span class="work-company" data-company="#SHIFT">#SHIFT</span><span class="work-profile" data-profile="#LeoSa">#LeoSa</span></div> -->
                  <% if work.top_tags.present? %>
                    <div class="work-tags">
                      <% work.top_tags.split(",").each do |top_tag| %>
                        <span>#<%= raw top_tag %></span>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </a>
            <% end %>
            <div style="clear: both;"></div>
          <% end %>
        </div>
      </div>
    </section><a class="work-nav-arrow"></a>
    <div class="works-nav work-nav-hide">
      <div class="works-category-filer"><span class="font-black">All</span></div>
      <div class="works-nav-img"><img src="<%= asset_path('works-person@2x.png') %>"></div>
      <ul class="works-category accordion" data-accordion data-allow-all-closed="true">
        <li class="accordion-item category-all"><a class="accordion-title" href="/works">ALL</a></li>
        <% if Tag.shift.size > 0 %>
          <li class="accordion-item" data-accordion-item><a class="accordion-title" href="#">SHIFT</a>
            <div class="accordion-content" data-tab-content>
              <% Tag.shift.each do |shift_tag| %>
                <%= link_to "##{shift_tag.name}", works_path(tag: shift_tag.name) %>
                <!-- <a href="#" data-tag="#ChiaHao">#ChiaHao</a><a href="#" data-tag="#BlueDesign">#BlueDesign</a><a href="#" data-tag="#LeoSa">#LeoSa</a><a href="#" data-tag="#ChiaHao">#ChiaHao</a><a href="#" data-tag="#BlueDesign">#BlueDesign</a><a href="#" data-tag="#LeoSa">#LeoSa</a><a href="#" data-tag="#ChiaHao">#ChiaHao</a><a href="#" data-tag="#BlueDesign">#BlueDesign</a><a href="#" data-tag="#ChiaHao">#ChiaHao</a> -->
              <% end %>
            </div>
          </li>
        <% end %>
        <% if Tag.cooperation.size > 0 %>
          <li class="accordion-item" data-accordion-item><a class="accordion-title" href="#">COOPERATIONS</a>
            <div class="accordion-content" data-tab-content>
              <% Tag.cooperation.each do |cooperation_tag| %>
                <%= link_to "##{cooperation_tag.name}", works_path(tag: cooperation_tag.name) %>
                <!-- <a href="#" data-tag="#ChiaHao">#ChiaHao</a><a href="#" data-tag="#BlueDesign">#BlueDesign</a><a href="#" data-tag="#LeoSa">#LeoSa</a><a href="#" data-tag="#ChiaHao">#ChiaHao</a><a href="#" data-tag="#BlueDesign">#BlueDesign</a><a href="#" data-tag="#LeoSa">#LeoSa</a><a href="#" data-tag="#ChiaHao">#ChiaHao</a><a href="#" data-tag="#BlueDesign">#BlueDesign</a><a href="#" data-tag="#ChiaHao">#ChiaHao</a> -->
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
    <button class="map-more-top"></button>
    <button class="map-more-right"></button>
    <button class="map-more-down"></button>
    <button class="map-more-left"></button>
    <div class="social-menu">
      <button class="lines-button x" type="button" role="button" aria-label="Toggle Navigation"><span class="lines"></span></button>
      <div class="social-share"><a href="#">Facebook</a><a href="#">Instagram</a></div>
    </div>
    <%= render "common/chat" %>
  </div>
  <div class="single-work-box"><a class="single-work-close"></a>
    <div class="work-overlay"></div>
    <div class="single-work-loader"></div>
  </div>
</div>
<% if @work.present? %>
  <script type="text/javascript">
    $(document).on("ready", function(){
      $(".work-block[data-work-id='<%= @work.id %>']").trigger("click")
    })
  </script>
<% end %>