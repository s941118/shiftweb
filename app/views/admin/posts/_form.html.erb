<%= form_with model: [:admin, post], local: true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control #{post.errors[:title].present? ? 'is-invalid' : ''}" %>
    <% if post.errors[:title].present? %>
      <div class="text-danger">
        <%= post.errors[:title].join(", ") %>
      </div>
    <% end %>
  </div>
  <%= link_to "放棄", admin_posts_path, class: "btn btn-link text-danger" %>
  <%= f.submit "儲存", class: "btn btn-primary float-right" %>
<% end %>