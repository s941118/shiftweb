<%= notice_message(dismissible: true, fixed: true) %>
<div class="form-wrapper">
	<div class="title-bar">
		鴻妍搏命工作室
	</div>
	<%= form_for :session, url: signin_path, html: { class: "login" } do |f| %>
		<div class="form-fields-wrapper">
			<%= f.hidden_field :back_path, value: params[:back_path] %>
			<div class="form-group">
				<%= f.text_field :user_name, placeholder: "使用者名稱", class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.password_field :password, placeholder: "密碼", class: "form-control" %>
			</div>
			<%= f.submit "登入", class: "btn btn-primary btn-login" %>
		</div>
	<% end %>
</div>